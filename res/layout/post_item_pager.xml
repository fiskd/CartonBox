<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
	<ProgressBar
		android:id="@+id/post_item_pager_pbloading"
		style="@android:style/Widget.ProgressBar.Large"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center" />
	
	<ImageView
		android:id="@+id/post_item_pager_ivsample"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:adjustViewBounds="false"
		android:contentDescription="@string/app_name" />
	
	<TextView
		android:id="@+id/post_item_pager_tvmessage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="@string/download_failed"
		android:textIsSelectable="false"
		android:textAppearance="@android:style/TextAppearance.Large" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#55000000"
		android:gravity="center"
		android:padding="5dp"
		android:orientation="horizontal" >
		
		<ImageView
			android:id="@+id/post_item_pager_ivred"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:src="@drawable/circle_red_big"
			android:contentDescription="@string/app_name" />
		
		<ImageView
			android:id="@+id/post_item_pager_ivblue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:src="@drawable/circle_blue_big"
			android:contentDescription="@string/app_name" />
		
		<ImageView
			android:id="@+id/post_item_pager_ivgreen"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:src="@drawable/circle_green_big"
			android:contentDescription="@string/app_name" />
		
		<ImageView
			android:id="@+id/post_item_pager_ivyellow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/circle_yellow_big"
			android:contentDescription="@string/app_name" />
		
	</LinearLayout>
	
</FrameLayout>