<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.shujito.cartonbox"
	android:versionCode="1"
	android:versionName="0.1"
	android:installLocation="internalOnly" >
	
	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="17" />
	
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
	<application
		android:allowBackup="false"
		android:killAfterRestore="true"
		android:label="@string/app_name"
		android:theme="@style/Theme.Sherlock"
		android:icon="@android:drawable/sym_def_app_icon"
		android:name="org.shujito.cartonbox.CartonBox" >
		
		<activity
			android:name="org.shujito.cartonbox.view.activities.MainActivity"
			android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
			<intent-filter >
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name="org.shujito.cartonbox.view.activities.SiteIndexActivity" />
		<activity android:name="org.shujito.cartonbox.view.activities.PostViewActivity" />
		<activity android:name="org.shujito.cartonbox.view.activities.GeneralPreferencesActivity" />
	</application>
</manifest>