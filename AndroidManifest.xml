<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.shujito.cartonbox"
	android:versionCode="6"
	android:versionName="0.6"
	android:installLocation="internalOnly" >
	
	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="18" />
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
	<application
		android:allowBackup="false"
		android:killAfterRestore="true"
		android:hardwareAccelerated="true"
		android:label="@string/app_name"
		android:theme="@style/Theme.Sherlock"
		android:icon="@drawable/launcher"
		android:name="org.shujito.cartonbox.CartonBox" >
		
		<activity
			android:name="org.shujito.cartonbox.view.activities.MainActivity"
			android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
			android:label="@string/app_name" >
			<intent-filter >
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.shujito.cartonbox.view.activities.SiteIndexActivity"
			android:launchMode="singleTop" >
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchsite" />
		</activity>
		<activity android:name="org.shujito.cartonbox.view.activities.PostViewActivity" />
		<activity android:name="org.shujito.cartonbox.view.activities.GeneralPreferencesActivity" />
		<activity android:name="org.shujito.cartonbox.view.activities.DownloadsActivity" />
		
		<service android:name="org.shujito.cartonbox.services.DownloadService"/>
	</application>
</manifest>